{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "ram"
        },
        "update_interval": {
          "type": "integer",
          "format": "uint64",
          "default": 1000,
          "minimum": 0
        }
      },
      "required": ["type"]
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "swap"
        },
        "update_interval": {
          "type": "integer",
          "format": "uint64",
          "default": 1000,
          "minimum": 0
        }
      },
      "required": ["type"]
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "cpu"
        },
        "core": {
          "type": ["integer", "null"],
          "format": "uint",
          "default": null,
          "minimum": 0
        },
        "update_interval": {
          "type": "integer",
          "format": "uint64",
          "default": 1000,
          "minimum": 0
        }
      },
      "required": ["type"]
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "battery"
        },
        "update_interval": {
          "type": "integer",
          "format": "uint64",
          "default": 1000,
          "minimum": 0
        }
      },
      "required": ["type"]
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "disk"
        },
        "partition": {
          "type": "string",
          "default": "/"
        },
        "update_interval": {
          "type": "integer",
          "format": "uint64",
          "default": 1000,
          "minimum": 0
        }
      },
      "required": ["type"]
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "custom"
        },
        "cmd": {
          "type": "string"
        },
        "update_interval": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0
        }
      },
      "required": ["type", "update_interval", "cmd"]
    }
  ]
}
